@model ATNetCoreTelegramBot.Models.SchemaTelegram.Channel

@{
    ViewData["Title"] = "Create";
    IEnumerable<ATNetCoreTelegramBot.Web.UI.Areas.TelegramBot.Infrastructure.TelegramBotPageMessage>? pageMessage = TempData["TelegramBotPageMessages"] as IEnumerable<ATNetCoreTelegramBot.Web.UI.Areas.TelegramBot.Infrastructure.TelegramBotPageMessage>;
}

@section BreadCrumbs {
    @{
        await Html.RenderPartialAsync(partialViewName: "Partials/Create/_BreadCrumbs", model: null, viewData: null);
    }
}

@{
    if (pageMessage is not null)
    {
        <div class="row">
            <div class="col-sm-12 col-md-12">
                @await Component.InvokeAsync("TelegramBotPageMessage", pageMessage)
            </div>
        </div>
    }
}

@{
    if (Model is not null)
    {
        <div class="row">
            <div class="col-sm-4 col-md-4">
                <div class="card">
                    <div class="card-header border-bottom-0">
                        <h3 class="card-title">
                            افرودن کانال جدید
                        </h3>
                        <div class="card-options">
                            <a href="#" class="card-options-fullscreen ml-2" data-toggle="card-fullscreen">
                                <i class="fe fe-maximize"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body pb-2">
                        <form class="needs-validation was-validated" method="post">
                            <div class="row row-sm">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-label Vazir-14px">
                                            نام
                                        </label>
                                        <input asp-for="Name" class="form-control text-center" placeholder="نیازی به درج @@ قبل نام نیست" minlength="1" required />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label Vazir-14px">
                                            ترتیب
                                        </label>
                                        <input asp-for="Ordering" class="form-control" min="1" max="1000" required />
                                        <span asp-validation-for="Ordering" class="text-danger"></span>
                                    </div>
                                    <div class="btn-list">
                                        <div class="col mb-4">
                                            <a class="btn btn-primary Vazir-10px ml-2" asp-area="TelegramBot" asp-controller="Channel" asp-action="Index">
                                                <i class="fe fe-x"></i>
                                            </a>
                                            <button type="submit" class="btn btn-default Vazir-14px">
                                                <i class="fe fe-save"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}

@section ScriptEndBody {
    <script>
        $("#SlideBasicInformation").addClass("is-expanded");
        $("#SlideBasicInformation_Main").addClass("active");
        $("#SlideBasicInformation_ViewAllChannels").addClass("active");
    </script>
}